<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%p] %d %C{1}:%L [%X{traceId}] - %m%n"/>
        </Console>
        <RollingFile name="RollingFileInfo" fileName="./logs/java-info.log"
                     filePattern="./logs/java-info.log.%i">
            <ThresholdFilter level="info" onMatch="ACCEPT"
                             onMismatch="DENY"/>
            <PatternLayout pattern="[%p] %d %C{1}:%L [%X{traceId}] - %m%n"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="50 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="9"/>
        </RollingFile>
        <RollingFile name="RollingFileWarn" fileName="./logs/java-warn.log"
                     filePattern="./logs/java-warn.log.%i">
            <ThresholdFilter level="warn" onMatch="ACCEPT"
                             onMismatch="DENY"/>
            <PatternLayout pattern="[%p] %d %C{1}:%L - %m%n"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="50 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="9"/>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="RollingFileInfo"/>
            <AppenderRef ref="RollingFileWarn"/>
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
